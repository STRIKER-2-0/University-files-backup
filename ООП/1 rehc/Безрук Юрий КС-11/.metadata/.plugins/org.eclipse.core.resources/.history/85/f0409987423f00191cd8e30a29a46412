import java.util.*;

public class Ind1class {
	public static void main(String args[]){
		int x;
		for(x=0; x<=10; x++){
			System.out.println(x+" "+F_x(x));
		}
		
	}
	public static double F_x(int x){
		double E=10e-6;
		double result=0;
		double member;
		for(int k=1; Math.abs(member)>E; k++){
			member=Math.pow(-1, k+1)*((Math.pow(3, 2*k+1)-3)/fact(2*k+1))*Math.pow(x, 2*k+1);
			result+=member;
		}
		return result;
	}
	public static int fact(int n){
		switch(n){
			case 0: return 1;
			case 1: return 1;
			default: return n*fact(n-1);
		}
	}
}
